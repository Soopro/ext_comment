{
  "watch":{
    "src": "src",
    "dest": "build",
    "clean": true,
    "server": true,
    "port": 9000
  },
  "init":{
    "copy": {
      "libs":{
        "flatten": true,
        "src":[
          "q/q.js"
        ],
        "cwd":"bower_components",
        "dest":"src/scripts/libs"
      }
    }
  },
  "release":{
    "clean": ["build", "dist"],
    "render":{
      "cwd": "src",
      "dest": "build"
    },
    "copy":{
      "scripts":{
        "src": [
          "**/*"
        ],
        "cwd": "build",
        "dest": "dist"
      },
      "assets":{
        "flatten": true,
        "src": [
          "**/*.ttf",
          "**/*.woff*",
          "**/*.png",
          "**/*.jpg",
          "**/*.svg",
          "!uploads/*"
        ],
        "cwd": "build",
        "dest": "dist"
      }
    },
    "compress": {
      "process_html":{
        "type": "process_html",
        "cwd": "dist",
        "src": ["*.html"],
        "minify": false
      },
      "js":{
        "type": "js",
        "cwd": "dist",
        "src": [
          "scripts/libs/q.js",
          "scripts/ext_comment_sdk.js",
          "scripts/ext_comment_render.js"
        ],
        "output": "out/ext_comment_plugin.min.js"
      },
      "css":{
        "type": "css",
        "cwd": "dist",
        "src": [
          "styles/ext_comment_plugin.css",
          "styles/bootstrap.min.css",
          "styles/style.css"
        ],
        "output": "out/ext_comment_plugin.min.css"
      }
    }
  }
}